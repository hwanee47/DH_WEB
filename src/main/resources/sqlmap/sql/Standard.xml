<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="Standard">
	<select id="selectVendList" resultType="HashMap" parameterType="HashMap">
		/*Standard.selectVendList*/
		SELECT
    		*
    	FROM
    		MNG_VEND_TB
    	ORDER BY VEND_CD
	</select> 
	
	<insert id="insertVend" parameterType="Map">
    	/*Standard.insertVend*/
    	INSERT INTO MNG_VEND_TB
    	(
    		VEND_NAME
    		,VEND_REP
    		,VEND_NUM
    		,VEND_ADDR
    		,VEND_TEL
    		,VEND_FAX
    	)
    	VALUES
    	(
    		#{vendName}
    		,#{vendRep}
    		,#{vendNum}
    		,#{vendAddr}
    		,#{vendTel}
    		,#{vendFax}
    	)
    	
    </insert>


	 <insert id="insertMaterial" parameterType="Map">
    	/*App.insertMaterial*/
    	INSERT INTO MNG_MATERIAL_TB
    	(
    		MODEL
    		,ITEM_NUMBER
    		,ITEM_NAME
    		,QUALITY_MATERIAL
    		,HEAT_TREATMENT_HARDNESS
    		,REMARKS
    		,VEND_SEQ
    	)
    	VALUES
    	(
    		,#{model}
    		,,#{itemNumber}
    		,,#{itemName}
    		,,#{qualityMaterial}
    		,,#{heatTreatmentHardness}
    		,,#{remarks}
    		,,#{vendSeq}
    	)
    	
    </insert>
    
    
    <select id="selectMaterialList" resultType="HashMap" parameterType="HashMap">
		/*App.selectMaterialList*/
		SELECT
    		B.VEND_NAME
    		,A.MODEL
    		,A.ITEM_NUMBER
    		,A.ITEM_NAME
    		,A.QUALITY_MATERIAL
    		,A.HEAT_TREATMENT_HARDNESS
    		,A.REMARKS
    	FROM
    		MNG_MATERIAL_TB A
    		,MNG_VEND_TB B
    	WHERE
    		A.VEND_SEQ = B.SEQ
    	ORDER BY VEND_NUM
	</select>
</mapper>